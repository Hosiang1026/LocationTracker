<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LocationTracker" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/success_green</item>
        <item name="colorSecondaryVariant">@color/success_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_gray</item>
        <!-- Window background -->
        <item name="android:windowBackground">@color/white</item>
        <!-- 确保兼容性 -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 按钮样式配置 -->
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>
    
    <!-- NoActionBar theme for MainActivity (Night) -->
    <style name="Theme.AppCompat.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/success_green</item>
        <item name="colorSecondaryVariant">@color/success_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_green</item>
        <!-- Window background -->
        <item name="android:windowBackground">@color/white</item>
        <!-- 确保兼容性 -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 按钮样式配置 -->
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>
    
    <!-- 省电模式兼容主题 (夜间模式) -->
    <style name="Theme.PowerSaveCompatible" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- 使用更保守的颜色配置 -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/success_green</item>
        <item name="colorSecondaryVariant">@color/success_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_gray</item>
        <!-- 窗口背景 -->
        <item name="android:windowBackground">@color/white</item>
        <!-- 状态栏图标 -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- 兼容性设置 -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 按钮样式配置 -->
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>
    
    <!-- 自定义按钮样式 (夜间模式) -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>